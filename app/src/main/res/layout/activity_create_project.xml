<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <data>

        <variable
            name="createProjectVM"
            type="com.example.pmp.viewModel.CreateProjectVM"
            />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CreateProject">

    <TextView
        android:id="@+id/create_project_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建项目"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/project_name_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@+id/create_project_title"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_project_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="输入项目名称"
            android:text="@={createProjectVM.name}"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/project_summary_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@+id/project_name_layout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_project_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="2"
            android:hint="输入项目简介"
            android:text="@={createProjectVM.description}"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/project_permission_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:hint="设置项目权限"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/project_summary_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <AutoCompleteTextView
            android:id="@+id/create_project_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:gravity="center"
            android:text="@={createProjectVM.projectPermission}"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.dd.CircularProgressButton
        android:id="@+id/create_project_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="100dp"
        app:cpb_iconComplete="@drawable/correct"
        app:cpb_iconError="@drawable/wrong"
        app:cpb_selectorComplete="@drawable/success_state_selector"
        app:cpb_selectorError="@drawable/failed_state_selector"
        app:cpb_selectorIdle="@drawable/init_state_selector"
        app:cpb_textIdle="创建完成"
        app:layout_constraintTop_toBottomOf="@id/project_permission_layout"
        app:cpb_cornerRadius="30dp"
        android:onClick="@{()->createProjectVM.createProject()}"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>