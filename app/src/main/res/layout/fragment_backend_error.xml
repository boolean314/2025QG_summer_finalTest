<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.pmp.viewModel.FragmentErrorVM"
            />
        <variable
            name="time"
            type="com.example.pmp.data.model.Time" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/backend_error1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <TextView
                    android:id="@+id/backend_error1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="近三天错误次数统计："
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="20dp"
                    />


                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/backend_error1_line_chart"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    app:layout_constraintTop_toBottomOf="@id/backend_error1_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_gravity="start" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/backend_error2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/backend_error1_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >
                <TextView
                    android:id="@+id/backend_error2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="近一周错误类型及次数统计："
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="20dp"
                    />


                <com.github.mikephil.charting.charts.CombinedChart
                    android:id="@+id/backend_error2_combined_chart"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    app:layout_constraintTop_toBottomOf="@id/backend_error2_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/backend_error3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/backend_error2_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >
                <TextView
                    android:id="@+id/backend_error3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="非法攻击统计："
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="20dp"
                    />
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/backend_error3_startTime_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/backend_error3_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"

                    >
                    <TextView
                        android:id="@+id/backend_error3_startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.startTime != null ? viewModel.startTime : `选择开始时间`}"
                        android:textSize="15sp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:onClick="@{()->viewModel.chooseStartTime()}"

                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/backend_error3_endTime_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/backend_error3_startTime_layout"
                    app:layout_constraintTop_toBottomOf="@id/backend_error3_text"
                    android:layout_margin="10dp"

                    >
                    <TextView
                        android:id="@+id/backend_error3_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.endTime != null ? viewModel.endTime : `选择结束时间`}"
                        android:textSize="15sp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:onClick="@{()->viewModel.chooseEndTime()}"

                        />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/backend_error3_query_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/backend_error3_text"
                    app:layout_constraintTop_toTopOf="@id/backend_error3_text"
                    android:layout_marginLeft="20dp"

                    >
                <TextView
                    android:id="@+id/backend_error3_query"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询"
                    android:textSize="15sp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:onClick="@{()->viewModel.sendRequest()}"
                    />


                    </com.google.android.material.card.MaterialCardView>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/backend_error3_bar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    app:layout_constraintTop_toBottomOf="@id/backend_error3_endTime_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_gravity="start"

                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/backend_error3_bar_chart"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:visibility="invisible"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>