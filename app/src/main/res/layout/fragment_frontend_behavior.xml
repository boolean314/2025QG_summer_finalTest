<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<data>
    <variable
        name="viewModel"
        type="com.example.pmp.viewModel.FragmentBehaviorVM"
        />
    <variable
        name="time"
        type="com.example.pmp.data.model.Time" />
</data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frontend_behavior1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >


                <TextView
                    android:id="@+id/frontend_behavior1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户埋点统计："
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="20dp"
                    />
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/frontend_behavior1_startTime_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/frontend_behavior1_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:id="@+id/frontend_behavior1_startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.startTime != null ? viewModel.startTime : `选择开始时间`}"
                        android:textSize="15sp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:onClick="@{()->viewModel.chooseStartTime()}"

                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/frontend_behavior1_endTime_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/frontend_behavior1_startTime_layout"
                    app:layout_constraintTop_toBottomOf="@id/frontend_behavior1_text"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:id="@+id/frontend_behavior1_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.endTime != null ? viewModel.endTime : `选择结束时间`}"
                        android:textSize="15sp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:onClick="@{()->viewModel.chooseEndTime()}"

                        />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/frontend_behavior1_query_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/frontend_behavior1_endTime_layout"
                    app:layout_constraintTop_toBottomOf="@id/frontend_behavior1_text"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"


                    >
                    <TextView
                        android:id="@+id/frontend_behavior1_query"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查询"
                        android:textSize="15sp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:onClick="@{()->viewModel.sendRequest()}"

                        />
                </com.google.android.material.card.MaterialCardView>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/frontend_behavior1_bar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:layout_constraintTop_toBottomOf="@id/frontend_behavior1_query_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_gravity="start" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frontend_behavior2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/frontend_behavior1_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >
                <TextView
                    android:id="@+id/frontend_behavior2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="近一周错误类型及次数统计："
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="20dp"
                    />




            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>