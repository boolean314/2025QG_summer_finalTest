<?xml version="1.0" encoding="utf-8"?>



<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.pmp.viewModel.FrontendDetailVM" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.FrontendDetail">


    <TextView
        android:id="@+id/frontend_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:text="@{viewModel.projectName}"
        android:textSize="24sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/frontend_detail_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/qq_blue"
        app:layout_constraintStart_toEndOf="@+id/frontend_detail_name"
        app:layout_constraintBottom_toBottomOf="@+id/frontend_detail_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frontend_detail_name"

        >

        <TextView
            android:id="@+id/frontend_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="frontend"
            android:textSize="20sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/qq_blue"
            />

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:strokeWidth="1dp"
        app:layout_constraintStart_toEndOf="@+id/frontend_detail_layout"
        app:layout_constraintBottom_toBottomOf="@+id/frontend_detail_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frontend_detail_name"
        app:strokeColor="@{viewModel.projectPermission == &quot;公开&quot; ? @color/wx_green : @color/red}"
        >

        <TextView
            android:id="@+id/frontend_detail_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.projectPermission}"
            android:textColor="@{viewModel.projectPermission == &quot;公开&quot; ? @color/wx_green : @color/red}"
            android:textSize="20sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/frontend_detail_member_list_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frontend_detail_layout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        >
    <TextView
        android:id="@+id/frontend_detail_member_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成员列表"
        android:textSize="20sp"
        android:textStyle="bold"
       android:padding="8dp"

        />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/frontend_detail_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frontend_detail_member_list_layout"


        >
    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/frontend_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/frontend_detail_tab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>