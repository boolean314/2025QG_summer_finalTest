<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="errorItem"
            type="com.example.pmp.data.model.FrontErrorData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/error_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{errorItem.errorType}"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/error_responsible_layout"
            android:padding="8dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/error_timestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{errorItem.timestamp}"
            app:layout_constraintTop_toBottomOf="@id/error_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/error_responsible_layout"
            android:padding="8dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/error_environment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{errorItem.environment}"
            app:layout_constraintTop_toBottomOf="@id/error_timestamp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/error_responsible_layout"
            android:padding="8dp"
            android:textSize="12sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/error_responsible_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="委派负责人"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp">

            <AutoCompleteTextView
                android:id="@+id/error_responsible_autocomplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
